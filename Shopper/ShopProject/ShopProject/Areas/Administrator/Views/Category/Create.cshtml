@model ShopProject.Areas.Administrator.Models.Category
@{
    ViewBag.Title = "Tạo danh mục mới";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Tạo danh mục mới</h2>


<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Category")
</div>
@using (Html.BeginForm("Create", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))

//Tham số cuối cùng là một đối tượng tùy chọn chứa thuộc tính encoding-type, 
//nó được sử dụng để chỉ định cách mã hóa nội dung của form khi gửi đến máy chủ. 
//rong đoạn này, giá trị của enctype sẽ là "multipart/form-data".
//Đây là kiểu mã hóa được sử dụng để gửi các file hình ảnh và các loại tập tin khác mà nội dung không phải là văn bản.
//
//

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="text-success">
            @ViewBag.CreateCategory
        </div>
        <div class="form-group col-lg-5">
            <label>Tên danh mục</label>
            @Html.EditorFor(model => model.cateName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên danh mục..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.cateName)</div>
            <label>Hình ảnh</label>
            <input type="file" id="file" name="file" />
            <div class="text-danger">@ViewBag.HinhAnh</div>
            <br />
            <input type="submit" value="Tạo mới" class="btn btn-default" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>